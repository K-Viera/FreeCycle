@model FreeCycle.Models.Usuario

@{
    ViewData["Title"] = "Recover Password";
}
@if (ViewBag.Email != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>
            An Email with the link to recover your password has been sent to "@ViewBag.Email" succesfully
        </strong>
    </div>
}

<div class="text-center"><h2 class="display-4">Recover Password</h2></div>


<hr />
<br />

<form asp-action="RecuperarContraseña">
    <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="Email" class="form-control" placeholder="Enter your Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>



    </div>

    <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-4">
            <input type="submit" value="Recover your password" class="btn btn-info btn-block" />
        </div>

    </div>


</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    setTimeout(function () {
        // Closing the alert
        $(".alert-success").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-success").slideUp(500);
        });
        $(".alert-warning").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-warning").slideUp(500);
        });
        $(".alert-danger").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-danger").slideUp(500);
        });
    }, 600);
</script>