@model FreeCycle.Models.Usuario

@{
    ViewData["Title"] = "Change Password";
}
@if (ViewBag.flag == 5)
{
    <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>The passwords are not the same</strong>
    </div>
}

<div class="text-center"><h2 class="display-4">Change Password</h2></div>


<hr />
<br />

<form asp-action="CambiarContraseña">
    <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="Password" type="password" class="form-control" placeholder="Enter your new Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>




    </div>

    <div>
        <input type="hidden" name="tkn" value="@ViewBag.tkn" />
    </div>



    <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="Password2" type="password" class="form-control" placeholder="Enter your new Password again" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-4">
            <input type="submit" value="Change your password" class="btn btn-info btn-block" />
        </div>

    </div>


</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    setTimeout(function () {
        // Closing the alert
        $(".alert-success").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-success").slideUp(500);
        });
        $(".alert-warning").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-warning").slideUp(500);
        });
        $(".alert-danger").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-danger").slideUp(500);
        });
    }, 600);
</script>