@model FreeCycle.Models.Usuario

@{
    ViewData["Title"] = "Create";
}
<div class="text-center"><h2 class="display-4">Sign Up</h2></div>


<hr />

<form asp-action="Create">
    <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Name" class="form-control" placeholder="Name and lastname" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        

    </div>    
      <div class="form-group row">
          <div class="col-4"></div>
          <div class="col-4">
              <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
              <span asp-validation-for="Password" class="text-danger"></span>

          </div>
          
      </div>
      <div class="form-group row">
          <div class="col-4"></div>
          <div class="col-4">
              <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
              <span asp-validation-for="PhoneNumber" class="text-danger"></span>
          </div>
         
      </div>
      <div class="form-group row">
          <div class="col-4"></div>
          <div class="col-4">
              <input type="email" asp-for="Email"  class="form-control" placeholder="Email" />
              <span asp-validation-for="Email" class="text-danger"></span>
          </div>
         
      </div>
      <div class="form-group row">
          <div class="col-4"></div>
          <div class="col-4">
              <input type="submit" value="Sign Up" class="btn btn-info btn-block" />
          </div>
         
      </div>
</form>
 



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
