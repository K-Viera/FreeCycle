@{
    ViewData["Title"] = "Donation Request";
}

<div class="text-center">
    <h2 class="display-4">Ask for a donation</h2>
    <br />

    <form>
        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-4 ">
                <input  class="form-control" placeholder="Address" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-4">
            <textarea type="text" rows="3" class="form-control" placeholder="Object description"></textarea>
            </div>

        </div>



        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type="submit" class="btn btn-info text-white btn-block" value="Submit your request" />
            </div>
        </div>

    </form>
   


</div>
