@model FreeCycle.Models.SolicitudDonacion

@{
    ViewData["Title"] = "Request Details";
}


<h1>Request details</h1>


<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.adress)
        </dd>
        <dt class="col-sm-2">
            Object Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.objeto)
        </dd>
        <dt class="col-sm-2">
            User's name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Name)
        </dd>
    </dl>
</div>

<div>
    This request is yours, if you already have made the deal with the donor or if you don't want to request it anymore, please detele the request.
</div>

<br/>

<form asp-action="DetallesDeMiSolicitud" asp-route-UsuarioId="@ViewBag.UsuarioId">

    <div>
        <input type="hidden" name="Id" value="@Html.DisplayFor(model => model.Id)" />
    </div>

    <div>
        <input type="hidden" name="UsuarioId" value="@ViewBag.UsuarioId" />
    </div>

    <div class="form-group row">
        <div class="col-2">
            <input type="submit" value="Delete my Request" class="btn btn-info btn-block" />
        </div>

    </div>


</form>

<br />

