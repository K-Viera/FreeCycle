@model FreeCycle.ViewModels.Validacion
@{
    ViewData["Title"] = "Home Page";
}


@if (ViewBag.flag == 0)
{
    <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Wrong Email</strong>
    </div>
}
@if (ViewBag.flag == 1)
{
    <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Wrong password</strong>
    </div>
}
@if (ViewBag.flag == 3)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Succesfully registered</strong>
    </div>
}
<div class="text-center">
    <h2 class="display-4">Sign in</h2>
    <hr />
    <br />

    <form asp-action="Validacion">
        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-4 ">

                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>

            </div>

        </div>
        <div class="form-group row">


            <div class="col-4"></div>
            <div class="col-4">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

        </div>



        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type="submit" class="btn btn-info text-white btn-block" value="Sign In" />
            </div>
        </div>

    </form>
    <small class="form-text text-muted">Don't you have an account? Create one!</small>

    <br />
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <a asp-controller="Usuarios" asp-action="Create" class="btn btn-info text-white btn-block">Sign up as a Person</a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <a asp-controller="Empresas" asp-action="Create" class="btn btn-info text-white btn-block">Sign up as a Company</a>
        </div>
    </div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    setTimeout(function () {
        // Closing the alert
        $(".alert-success").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-success").slideUp(500);
        });
        $(".alert-warning").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-warning").slideUp(500);
        });
        $(".alert-danger").fadeTo(1500, 500).slideUp(500, function () {
            $(".alert-danger").slideUp(500);
        });
    }, 600);
</script>