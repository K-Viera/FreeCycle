@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-4">Sign in</h2>
    <br />

    <form asp-action="Validacion">
        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-4 ">
                <input name="Email" type="email" class="form-control" placeholder="Email" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-4">
                <input name="Password" type="password" class="form-control" placeholder="Password" />
            </div>

        </div>



        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <input type ="submit" class="btn btn-info text-white btn-block" value="Sign In!"/>
            </div>
        </div>

    </form>
    <small class="form-text text-muted">Don't you have an account? Create one!</small>

    <br />
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <a asp-controller="Usuarios" asp-action="Create" class="btn btn-info text-white btn-block">Sign Up</a>
        </div>
    </div>


</div>
